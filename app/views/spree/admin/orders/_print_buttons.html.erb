<% if @order and @order.completed_at? %>
  <br/>
  <center>
    <% buttons = Spree::PrintInvoice::Config[:print_buttons]
       buttons = buttons.split(",").collect{|b| b.strip } %>
    <%  buttons.each do |button| %>
      <%= button_link_to(t(button.to_s + "_print"), spree.admin_order_path(@order, :pdf , :template => button)) %>
    <% end %>
    <%= button_link_to("Print Balance Due Invoice", spree.admin_order_path(@order, :pdf , :template => "invoice", :balance_due => true)) %>
  </center>
  <br/><br/><br/>
<% end %>  
